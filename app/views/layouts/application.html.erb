<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Everest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body>
    <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation" data-controller="main-nav">
      <div class="navbar-brand">
        <%= link_to(projects_path, class: "navbar-item menu-spacer") do %>
          <%= image_tag("logo_120.png", class: "site-logo-image") %>
          <span class="navbar-title has-text-weight-semibold">Everest</span>
        <% end %>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-main-nav-target="mainNavBurger" data-action="click->main-nav#toggle">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div class="navbar-menu main-nav-menu" data-main-nav-target="mainNavMenu">
        <div class="navbar-start main-nav-items">
          <%= link_to(projects_path, class: "navbar-item has-text-weight-bold") do %>
            <span class="icon is-small">
              <i class="fas fa-home"></i>
            </span>
            <span>Home</span>
          <% end %>
          <%= link_to(activities_path, class: "navbar-item has-text-weight-bold") do %>
            <span class="icon is-small">
              <i class="fas fa-chart-pie"></i>
            </span>
            <span>Activity</span>
          <% end %>
          <%= link_to(documents_path, class: "navbar-item has-text-weight-bold") do %>
            <span class="icon is-small">
              <i class="fas fa-file-alt"></i>
            </span>
            <span>Documents</span>
          <% end %>
          <%= link_to(basecamp_path(document: Document::RESUME), class: "navbar-item has-text-weight-bold") do %>
            <span class="icon is-small">
              <i class="fas fa-user-check"></i>
            </span>
            <span>Resume</span>
          <% end %>
        </div>

        <div class="navbar-end menu-spacer"></div>
      </div>
    </nav>

    <div class="page-container">
      <% if flash[:alert] %>
        <div class="flash notification is-danger" data-controller="flash">
          <button class="delete" data-action="click->flash#close"></button>
          <p class="notice"><%= flash[:alert] %></p>
        </div>
      <% elsif flash[:notice] %>
        <div class="flash notification is-warning" data-controller="flash">
          <button class="delete" data-action="click->flash#close"></button>
          <p class="notice"><%= flash[:notice] %></p>
        </div>
      <% elsif flash[:success] %>
        <div class="flash notification is-success" data-controller="flash">
          <button class="delete" data-action="click->flash#close"></button>
          <p class="notice"><%= flash[:success] %></p>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
