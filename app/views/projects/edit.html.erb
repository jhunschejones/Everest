<div class="new-resource">
  <div class="new-resource-form-container">
    <h2 class="title is-4">Edit project</h2>

    <%= form_with(model: @project, url: project_path(@project)) do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: 'off', class: "input" %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, autocomplete: 'off', class: "textarea" %>
      </div>

      <div class="field">
        <%= f.label :created_at %><br />
        <%= f.date_select :created_at, use_short_month: true, order: [:month, :day, :year], start_year: 1.year.ago.year %>
        <small class="has-text-grey-light">(USA Pacific Time)</small>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "button is-info" %>
        <%= link_to "Back", projects_path, class: "button is-info is-outlined" %>
      </div>
    <% end %>
  </div>
</div>
